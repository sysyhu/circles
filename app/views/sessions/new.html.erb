<div class="page-header col-md-4 col-md-offset-4">
  <h1>Sign In</h1>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag sessions_path, method: :post do %>

    <div class="form-group">
      <label for="exampleInputEmail1">Username</label>
      <input type="text" name="username" placeholder="username..." class="form-control" id="form_username" title="用户名 6-12 个字符">
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" name="password" placeholder="password..." class="form-control" id="form_password">
    </div>

    <input type="submit" class="btn btn-primary" value="Sign In">
    <% end %> 
  </div>
</div>






